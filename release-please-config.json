{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "release-type": "simple",
    "bump-minor-pre-major": true,
    "bump-patch-for-minor-pre-major": true,
    "include-component-in-tag": false,
    "tag-separator": "",
    "packages": {
        ".": {
            "changelog-path": "CHANGELOG.md",
            "release-type": "simple"
        }
    },
    "changelog-sections": [
        {
            "type": "feat",
            "section": "Features"
        },
        {
            "type": "fix",
            "section": "Bug Fixes"
        },
        {
            "type": "docs",
            "section": "Documentation"
        },
        {
            "type": "perf",
            "section": "Performance"
        },
        {
            "type": "refactor",
            "section": "Code Refactoring",
            "hidden": true
        },
        {
            "type": "chore",
            "section": "Maintenance",
            "hidden": true
        },
        {
            "type": "test",
            "section": "Testing",
            "hidden": true
        }
    ]
}