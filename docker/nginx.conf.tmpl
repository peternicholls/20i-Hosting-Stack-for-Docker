# Nginx Configuration for 20i-style hosting environment
# Optimized for serving static files and proxying PHP to Apache/PHP-FPM

server {
    listen 80;
    server_name localhost;
    
    root /var/www/site;
    index index.php index.html index.htm;

    # Security headers (20i-style)
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/xml+rss application/json;

    # Static file handling (nginx serves directly)
    location ~* \.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1M;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # PHP files - proxy to Apache/PHP-FPM
    location ~ \.php$ {
        try_files $uri =404;
        
        fastcgi_pass apache:9000;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # Common fastcgi settings
        fastcgi_param HTTP_PROXY "";
        fastcgi_param SERVER_NAME $host;
        fastcgi_param REQUEST_SCHEME $scheme;
        fastcgi_buffering on;
        fastcgi_buffer_size 1k;
        fastcgi_buffers 24 4k;
        fastcgi_busy_buffers_size 8k;
        fastcgi_temp_file_write_size 8k;
        fastcgi_read_timeout 600s;
    }

    # Handle common CMS/framework routes
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # Block access to sensitive files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    location ~ /(?:uploads|files)/.*\.php$ {
        deny all;
    }

    location ~* /(?:cache|logs|temp)/.*$ {
        deny all;
    }

    # Common locations to block
    location ~ ^/(wp-config\.php|xmlrpc\.php) {
        deny all;
    }

    # Error pages
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;
}
